<div class="container mt-5">
  <h2 class="mb-4 text-center">Top Cryptocurrencies</h2>

  <div class="table-responsive">
    <table class="table table-striped table-bordered text-center align-middle shadow-sm">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Symbol</th>
          <th>Price (USD)</th>
        </tr>
      </thead>
      <tbody>
        <% @cryptos.each_with_index do |crypto, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td>
              <a href="#" class="text-decoration-none fw-bold"
                 data-bs-toggle="modal"
                 data-bs-target="#chartModal"
                 data-symbol="<%= crypto['symbol'].upcase %>">
                <%= crypto["name"] %>
              </a>
            </td>
            <td><%= crypto["symbol"].upcase %></td>
            <td>$<%= number_with_precision(crypto["current_price"], precision: 2) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="chartModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="chartTitle">Crypto Chart</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div id="tradingview_chart" style="height:400px;"></div>
      </div>
    </div>
  </div>
</div>

<!-- TradingView Lightweight Charts -->
<script src="https://s3.tradingview.com/tv.js"></script>
<script>
document.addEventListener("turbo:load", () => {
  const modal = document.getElementById("chartModal");
  modal.addEventListener("show.bs.modal", (event) => {
    const link = event.relatedTarget;
    const symbol = link.getAttribute("data-symbol");
    document.getElementById("chartTitle").innerText = symbol + " Chart";

    // remove old chart
    document.getElementById("tradingview_chart").innerHTML = "";

    new TradingView.widget({
      "width": "100%",
      "height": 400,
      "symbol": "BINANCE:" + symbol + "USDT",
      "interval": "60",
      "timezone": "Etc/UTC",
      "theme": "light",
      "style": "1",
      "locale": "en",
      "container_id": "tradingview_chart"
    });
  });
});
</script>
