<div class="container mt-5">
  <div class="card shadow-lg p-4 text-center">
    <% if @user.profile_image_url.present? %>
      <%= image_tag @user.profile_image_url, alt: @user.username, class: "rounded-circle mb-3", width: 120, height: 120 %>
    <% else %>
      <div class="mb-3 text-muted">No profile image</div>
    <% end %>

    <h2><%= @user.first_name %> <%= @user.last_name %></h2>
    <p class="text-muted">@<%= @user.username %></p>

    <p class="mt-3"><%= @user.bio.presence || "No bio added yet." %></p>

    <hr>

    <p><strong>Email:</strong> <%= @user.email %></p>
    <p><strong>Phone:</strong> <%= @user.phone_number.presence || "N/A" %></p>

    <% if current_user == @user %>
      <div class="mt-4">
        <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
