<div class="container mt-5">
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <div class="card shadow-lg">
    <div class="card-body">
      <h3 class="card-title mb-4 text-center text-primary">
        <%= @portfolio.asset_name.capitalize %> (<%= @portfolio.symbol.upcase %>)
      </h3>

      <div class="row text-center">
        <div class="col-md-4 mb-3">
          <h6 class="text-muted">Quantity</h6>
          <p class="fw-bold fs-5"><%= @portfolio.quantity %></p>
        </div>
        <div class="col-md-4 mb-3">
          <h6 class="text-muted">Main-Holdings</h6>
          <% if @portfolio.respond_to?(:price) && @portfolio.price.present? %>
            <p class="fw-bold fs-5 text-success">$<%= number_with_precision(@portfolio.price, precision: 2) %></p>
          <% else %>
            <p class="text-muted"></p>
          <% end %>
        </div>
        <div class="col-md-4 mb-3">
          <h6 class="text-muted">Symbol</h6>
          <p class="fw-bold fs-5"><%= @portfolio.symbol.upcase %></p>
        </div>
      </div>

      <% if @portfolio.notes.present? %>
        <hr>
        <h6 class="text-muted">Notes</h6>
        <p><%= simple_format(@portfolio.notes) %></p>
      <% end %>

      <div class="d-flex justify-content-center mt-4 gap-3">
        <%= link_to "Edit Portfolio", edit_portfolio_path(@portfolio), class: "btn btn-primary" %>
        <%= link_to "Back to Portfolios", portfolios_path, class: "btn btn-outline-secondary" %>
        <%= button_to "Delete Portfolio", @portfolio, method: :delete,
                      data: { confirm: "Are you sure you want to delete this portfolio?" },
                      class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
