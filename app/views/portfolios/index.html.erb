<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Your Portfolios</h2>
    <%= link_to "Add New", new_portfolio_path, class: "btn btn-primary" %>
  </div>

  <% if @portfolios.any? %>
    <div class="table-responsive shadow-sm">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Asset Name</th>
            <th>Symbol</th>
            <th>Quantity</th>
            <th>Notes</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @portfolios.each do |p| %>
            <tr>
              <td><%= p.asset_name %></td>
              <td><%= p.symbol.upcase %></td>
              <td><%= p.quantity %></td>
              <td><%= truncate(p.notes, length: 40) %></td>
              <td class="text-end">
                <%= link_to "Show", p, class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Edit", edit_portfolio_path(p), class: "btn btn-sm btn-outline-primary" %>
                <%= button_to "Delete", p, method: :delete, data: { confirm: "Are you sure?" },
                                class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-muted">You donâ€™t have any portfolios yet.</p>
  <% end %>
</div>
